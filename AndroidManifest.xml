<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.placelet"
    android:versionCode="113"
    android:versionName="1.1.3" >
	<!-- Change Version here, in the string resources and in the Webserver Class -->
    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <!-- Permission to use location -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- Permission to write and write to external storage -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- GCM connects to Google Services. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- GCM requires a Google account. -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />

    <permission
        android:name="net.placelet.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="net.placelet.permission.C2D_MESSAGE" />

    <!-- This app has permission to register and receive data message. -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <application
        android:name="net.placelet.Placelet"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/PlaceletLogoActionBarTheme" >
        <activity
            android:name="net.placelet.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="unspecified" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.placelet.LoginActivity"
            android:label="@string/app_name"
            android:parentActivityName="net.placelet.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.placelet.MainActivity" />
        </activity>
        <activity
            android:name="net.placelet.ProfileActivity"
            android:label="@string/app_name"
            android:parentActivityName="net.placelet.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.placelet.MainActivity" />
        </activity>
        <activity
            android:name="net.placelet.IOMessageActivity"
            android:label="@string/title_activity_iomessage" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.placelet.MainActivity" />
        </activity>
        <activity
            android:name="net.placelet.UploadActivity"
            android:label="@string/title_activity_upload" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.placelet.MainActivity" />
        </activity>
        <activity android:name="com.pushbots.push.PBMsg" />
        <activity android:name="com.pushbots.push.PBListener" />

        <receiver
            android:name="com.google.android.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>

                <!-- Receives the actual messages. -->
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <!-- Receives the registration id. -->
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="net.placelet" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.pushbots.push.MsgReceiver" />

        <service android:name="com.pushbots.push.GCMIntentService" />
        
        <service android:name="org.openudid.OpenUDID_service" >
            <intent-filter>
                <action android:name="org.openudid.GETUDID" />
            </intent-filter>
        </service>
        

        <intent-filter>
            <action android:name="net.placelet.MESSAGE" />

            <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>

        <receiver android:name="net.placelet.CustomPushReceiver" />

        <activity
            android:name="net.placelet.AboutActivity"
            android:label="@string/title_activity_about" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.placelet.MainActivity" />
        </activity>
        <activity
            android:name="net.placelet.OptionsActivity"
            android:label="@string/title_activity_options" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.placelet.MainActivity" />
        </activity>
    </application>

</manifest>