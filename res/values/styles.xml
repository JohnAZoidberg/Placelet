<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="thickDivider" parent="@android:style/Widget.ListView">

        <!-- <item name="android:dividerHeight">1dp</item> -->
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:dividerHeight">2dp</item>
        <item name="android:divider">#CCCCCC</item>
        <item name="android:cacheColorHint">#FFFFFF</item>
        <item name="android:listSelector">#00000000</item>
    </style>

    <style name="noDivider" parent="@android:style/Widget.ListView">

        <!-- <item name="android:dividerHeight">1dp</item> -->
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:divider">#FFFFFF</item>
        <item name="android:cacheColorHint">#FFFFFF</item>
        <item name="android:listSelector">#00000000</item>
    </style>

    <style name="list_header">
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
</resources>